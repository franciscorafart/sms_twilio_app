<!DOCTYPE html>
<html lang="en">
	<head>
    	<meta charset="utf-8">
    	<meta name="description" content="Your description goes here">
			<meta name content="">

		<title>Blank Template</title>

		<!-- external CS  link -->
		<link rel="stylesheet" href="normalize.css">
		<link rel="stylesheet" href="style.css">


	</head>
	<body>
		<section class="cover clearfix">
			<div class="title">
				<h1>Masses Respond</h1>
				<h2>SMS Messaging app for non-profits</h2>
			</div>


			<div class="enterDatabase">
				<h2>Enter name in database</h2>
				<form class="" action="/enterData" method="POST">
					<input type="text" name="firstName" placeholder="First Name">
					<input type="text" name="lastName" placeholder="Last Name">
					<input type="number" name="phone" placeholder="phone number">
					<button type="submit" name="button">Enter to database</button>
				</form>
			</div>

			<div class="sendMessage">
				<h2>Send a message</h2>
				<!-- <form class="sendMessage" action="index.html" method="post"> -->
					<!-- <input id="smsmessage" type="text" name="message" value=""> -->
					<textarea id="smsmessage" name="message" cols="40" rows="3" placeholder="Your message here..."></textarea>
					<button id="send" type="button" name="button">Send message</button>
				<!-- </form> -->

			</div>

			<div class="contactsTable">
				<h2>Your contacts</h2>
				<!-- add table for contacts -->
				<table>
					<tr>
						<th>Name</th>
						<th>Last name</th>
						<th>phone</th>
					</tr>
					<%for(var i=0;i<messages.length; i++){%>
						<tr>
							<td><%= messages[i].firstName%></td>
							<td><%= messages[i].lastName%></td>
							<td><%= messages[i].phone%></td>
						</tr>
					<% } %>
				</table>

			</div>
		</section>


		<script src="http://code.jquery.com/jquery-latest.min.js"></script>
		<script src="main.js" type="text/javascript"></script>

	</body>
</html>
